<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate_sample</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="connection.pool_size">1</property>
		<property name="show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">create</property>
		
		<!-- Default is import.sql -->
		<property name="hibernate.hbm2ddl.import_files">initial_data_many_to_many.sql</property>
		
		<mapping class="com.bin.framework.hibernate.sample.entity.manytomany.User"/>
		<mapping class="com.bin.framework.hibernate.sample.entity.manytomany.Role"/>
		
	</session-factory>
</hibernate-configuration>